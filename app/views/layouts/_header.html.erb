<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <% if user_signed_in? %>
      <%= link_to "Croopz", root_path, id: "logo" %>
      <% end %>
      <nav>
        <ul class="nav pull-right">

          <li><%= link_to "Home", root_path %></li>
          <% if user_signed_in? %>
          <% if current_user.admin? %>
          <li id="fat-menu" class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Company <b class="caret"></b>
            </a>
             <ul class="dropdown-menu"> 
                <% if current_user.company_id == nil %>
                <li><%= link_to "Create a new company", new_company_path %></li>
                <% else %>
                <li><%= link_to "My company", company_path(current_user.company_id) %></li>
                <li><%= link_to "Edit company", edit_company_path(current_user.company_id) %></li>
                <% end %>
            </ul>
          </li>
          <% end %>

          <% if current_user.admin? && current_user.company_id != nil %>
          <li id="fat-menu" class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Process <b class="caret"></b>
            </a>
             <ul class="dropdown-menu">
                <li><%= link_to "Create a new process", new_target_path %></li>
                <li><%= link_to "All processes", targets_path %></li>
            </ul>
          </li>
          <% end %>

          <% if current_user.admin? && current_user.company_id != nil %>
            <li id="fat-menu" class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Users <b class="caret"></b>
            </a>
             <ul class="dropdown-menu">
                <li><%= link_to "Invite a new user", new_user_invitation_path %></li>
                <li><%#= link_to 'Create manual user', new_user_path %>
                <li><%= link_to "All Users", users_path %></li>
            </ul>
          </li>
          <% end %>

            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-user icon-white"></i>
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%#= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", edit_user_registration_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out", destroy_user_session_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Sign in", new_user_session_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>
